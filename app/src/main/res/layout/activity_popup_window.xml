<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PopupWindowActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="246dp"
            android:background="@drawable/popup_custom"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_extra_bold"
                android:fontStyle="normal"
                android:fontWeight="800"
                android:text="ENTER YOUR LOBBY CODE"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:layout_marginStart="85dp"
                android:hint="----"
                android:fontFamily="@font/inter_extra_bold"
                android:fontStyle="normal"
                android:fontWeight="800"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:inputType="text"
                android:maxLength="10"
                android:gravity="center_horizontal"
                android:textColorHint="#000000"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="125dp"
                android:text="GO!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/inter_extra_bold"
                android:fontWeight="800"
                android:background="@drawable/button_background"/>

        </LinearLayout>
        <Button
            android:layout_width="81.6dp"
            android:layout_height="42dp"
            android:layout_marginTop="78dp"
            android:layout_marginStart="572dp"
            android:background="@drawable/x_button_background"
            android:text="X"
            android:fontFamily="@font/inter_extra_bold"
            android:textColor="#3355A5"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
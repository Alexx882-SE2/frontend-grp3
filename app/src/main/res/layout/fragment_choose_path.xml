<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChoosePathFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choosePathText"
            android:layout_width="wrap_content"
            android:layout_height="252dp"
            android:padding="50dp"
            android:text="@string/choosePath"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnCareer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CareerPath" />

        <Button
            android:id="@+id/btnCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CollegePath" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</FrameLayout>